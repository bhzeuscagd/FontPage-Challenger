---
interface Props {
    name: string;
    size?: number | string;
    class?: string;
    fill?: string;
    strokeWidth?: number | string;
}

const {
    name,
    size = 24,
    class: className = "",
    fill = "none",
    strokeWidth = "1.6",
} = Astro.props;
---

<svg
    width={size}
    height={size}
    viewBox="0 0 24 24"
    fill={fill}
    stroke="currentColor"
    stroke-width={strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
    class={className}
>
    <use href={`/sprite.svg#${name}`}></use>
</svg>
