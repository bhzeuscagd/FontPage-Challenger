---
import "../styles/global.css";
import Fonts from "../components/Fonts.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Frontpage - Your personalized tech content aggregator"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<Fonts />
		<ViewTransitions />
		<script is:inline>
			(function () {
				const saved = localStorage.getItem("theme");
				if (saved === "dark") {
					document.documentElement.setAttribute("data-theme", "dark");
				}
			})();
		</script>
		<style is:global>
			/* Slide to left (forward navigation) */
			@keyframes slide-out-to-left {
				from {
					transform: translateX(0);
					opacity: 1;
				}
				to {
					transform: translateX(-100%);
					opacity: 0;
				}
			}
			@keyframes slide-in-from-right {
				from {
					transform: translateX(100%);
					opacity: 0;
				}
				to {
					transform: translateX(0);
					opacity: 1;
				}
			}

			/* Slide to right (back navigation) */
			@keyframes slide-out-to-right {
				from {
					transform: translateX(0);
					opacity: 1;
				}
				to {
					transform: translateX(100%);
					opacity: 0;
				}
			}
			@keyframes slide-in-from-left {
				from {
					transform: translateX(-100%);
					opacity: 0;
				}
				to {
					transform: translateX(0);
					opacity: 1;
				}
			}

			::view-transition-old(root) {
				animation: slide-out-to-left 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}
			::view-transition-new(root) {
				animation: slide-in-from-right 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}

			/* Back navigation */
			.back-transition::view-transition-old(root) {
				animation: slide-out-to-right 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}
			.back-transition::view-transition-new(root) {
				animation: slide-in-from-left 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}
		</style>
	</head>
	<body
		class="bg-bg-primary text-text-primary min-h-screen overflow-x-hidden"
	>
		<slot />
		<ThemeToggle />
	</body>
</html>
