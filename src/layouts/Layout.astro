---
import "../styles/global.css";
import Fonts from "../components/Fonts.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import Footer from "../components/Footer.astro";
import CookieConsent from "../components/CookieConsent.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article" | "SoftwareApplication";
	lang?: string;
}

const {
	title,
	description = "Frontpage - Your personalized tech content aggregator",
	image = "/og-image.jpg",
	type = "website",
	lang = "en",
} = Astro.props;

// Default canonical URL
const canonicalURL = new URL(
	Astro.url.pathname,
	Astro.site || "https://frontpage.app",
);

// JSON-LD Schema
const schemaValue =
	type === "SoftwareApplication"
		? {
				"@context": "https://schema.org",
				"@type": "SoftwareApplication",
				name: "Frontpage",
				operatingSystem: "Web",
				applicationCategory: "NewsApplication",
				offers: {
					"@type": "Offer",
					price: "0",
					priceCurrency: "USD",
				},
			}
		: {
				"@context": "https://schema.org",
				"@type": "Organization",
				url: canonicalURL.href,
				logo: `${Astro.site || "https://frontpage.app"}/favicon.svg`,
			};
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph / Facebook -->
		<meta
			property="og:type"
			content={type === "SoftwareApplication" ? "website" : type}
		/>
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, canonicalURL)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, canonicalURL)} />

		<!-- JSON-LD Structured Data -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify(schemaValue)}
		/>

		<!-- Font Preloading -->
		<link
			rel="preload"
			href="/fonts/newsreader-variable.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/jetbrains-mono-variable.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<Fonts />
		<ViewTransitions />
		<script is:inline>
			(function () {
				const saved = localStorage.getItem("theme");
				if (saved === "dark") {
					document.documentElement.setAttribute("data-theme", "dark");
				}
			})();
		</script>
		<style is:global>
			/* Slide to left (forward navigation) */
			@keyframes slide-out-to-left {
				from {
					transform: translateX(0);
					opacity: 1;
				}
				to {
					transform: translateX(-100%);
					opacity: 0;
				}
			}
			@keyframes slide-in-from-right {
				from {
					transform: translateX(100%);
					opacity: 0;
				}
				to {
					transform: translateX(0);
					opacity: 1;
				}
			}

			/* Slide to right (back navigation) */
			@keyframes slide-out-to-right {
				from {
					transform: translateX(0);
					opacity: 1;
				}
				to {
					transform: translateX(100%);
					opacity: 0;
				}
			}
			@keyframes slide-in-from-left {
				from {
					transform: translateX(-100%);
					opacity: 0;
				}
				to {
					transform: translateX(0);
					opacity: 1;
				}
			}

			::view-transition-old(root) {
				animation: slide-out-to-left 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}
			::view-transition-new(root) {
				animation: slide-in-from-right 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}

			/* Back navigation */
			.back-transition::view-transition-old(root) {
				animation: slide-out-to-right 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}
			.back-transition::view-transition-new(root) {
				animation: slide-in-from-left 0.4s cubic-bezier(0.4, 0, 0.2, 1)
					forwards;
			}
		</style>
	</head>
	<body
		class="bg-bg-primary text-text-primary min-h-screen overflow-x-hidden flex flex-col"
	>
		<main class="grow">
			<slot />
		</main>
		<Footer />
		<ThemeToggle />
		<CookieConsent />
	</body>
</html>
