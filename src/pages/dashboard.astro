---
import AppLayout from "../layouts/AppLayout.astro";
import { fetchFeed } from "../lib/feed-parser";
import Icon from "../components/Icon.astro";
import Icon from "../components/Icon.astro";

// Fetch sample feed server-side (for demo purposes)
let feed = null;
try {
    feed = await fetchFeed("https://astro.build/rss.xml");
} catch (e) {
    console.error("Failed to fetch feed", e);
}
---

<AppLayout title="Dashboard - Frontpage">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1
                class="text-3xl font-bold font-serif text-text-primary tracking-tight"
            >
                Today
            </h1>
            <p class="text-text-secondary mt-1">
                Updates from your subscriptions
            </p>
        </div>
        <div
            id="user-info"
            class="text-sm font-medium text-text-secondary bg-surface px-3 py-1.5 rounded-full border border-border"
        >
            Loading...
        </div>
    </div>

    <!-- Feed Grid -->
    <div class="grid gap-6">
        {
            feed ? (
                feed.items.map((item) => (
                    <article class="rss-card bg-surface rounded-lg p-6 border border-border hover:shadow-glow transition-all group">
                        <div class="flex gap-6 items-start">
                            {item.imageUrl && (
                                <div class="w-32 h-24 flex-shrink-0 rounded-md overflow-hidden bg-bg-secondary">
                                    <img
                                        src={item.imageUrl}
                                        alt=""
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                        loading="lazy"
                                    />
                                </div>
                            )}
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="text-xs font-mono text-accent bg-accent-subtle px-2 py-0.5 rounded-full">
                                        {feed.title}
                                    </span>
                                    <time
                                        class="text-xs text-text-secondary"
                                        datetime={item.pubDate}
                                    >
                                        {new Date(
                                            item.pubDate,
                                        ).toLocaleDateString(undefined, {
                                            month: "short",
                                            day: "numeric",
                                            hour: "2-digit",
                                            minute: "2-digit",
                                        })}
                                    </time>
                                </div>

                                <h2 class="text-xl font-bold text-text-primary mb-2 leading-tight group-hover:text-accent transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        {item.title}
                                    </a>
                                </h2>

                                <p class="text-text-secondary line-clamp-2 text-sm leading-relaxed mb-4">
                                    {item.contentSnippet ||
                                        item.content
                                            .replace(/<[^>]*>?/gm, "")
                                            .substring(0, 150) + "..."}
                                </p>

                                <div class="flex items-center gap-4 text-text-secondary text-sm">
                                    <button class="hover:text-text-primary transition-colors flex items-center gap-1.5">
                                        <span class="text-lg">ðŸ”–</span> Save
                                    </button>
                                    <button class="hover:text-text-primary transition-colors flex items-center gap-1.5">
                                        <span class="text-lg">ðŸ“¤</span> Share
                                    </button>
                                </div>
                            </div>
                        </div>
                    </article>
                ))
            ) : (
                <div class="p-12 text-center text-text-secondary bg-surface rounded-lg border border-border border-dashed">
                    <p>No feed content available or error loading feed.</p>
                </div>
            )
        }
    </div>

    <!-- Sign Out Button (Hidden but accessible via JS) -->
    <button id="logout-btn" class="hidden">Sign Out</button>
</AppLayout>

<script>
    import { supabase } from "../lib/supabase";

    const userInfo = document.querySelector("#user-info") as HTMLElement;
    const logoutBtn = document.querySelector("#logout-btn") as HTMLElement; // Could move to sidebar

    async function checkUser() {
        const {
            data: { session },
        } = await supabase.auth.getSession();

        if (!session) {
            window.location.href = "/login";
            return;
        }

        if (userInfo && session.user.email) {
            userInfo.textContent = session.user.email;
        }
    }

    checkUser();

    // If we move sign out to sidebar later, we'll need to update this selector
    // For now, let's just make sure it doesn't crash if button is missing
